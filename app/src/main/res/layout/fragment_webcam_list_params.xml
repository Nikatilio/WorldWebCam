<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/regionSpinner"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/properties_view_item_height"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/propertySpinner" app:layout_constraintHorizontal_bias="1.0"/>

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/request_fields_spinner"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/properties_view_item_height"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView13"
                app:layout_constraintTop_toBottomOf="@+id/limit_edittext"/>

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/webcam_info_spinner"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/properties_view_item_height"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView14"
                app:layout_constraintTop_toBottomOf="@+id/request_fields_spinner"/>

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/languageSpinner"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/properties_view_item_height"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView15"
                app:layout_constraintTop_toBottomOf="@+id/webcam_info_spinner"/>

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/orderSpinner"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/properties_view_item_height"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/esclude_webcam_ids_textmultiline"/>

        <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Region"
                app:layout_constraintBottom_toBottomOf="@+id/regionSpinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/regionSpinner"/>

        <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Exclude webcam"
                app:layout_constraintBottom_toBottomOf="@+id/esclude_webcam_ids_textmultiline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/esclude_webcam_ids_textmultiline"/>

        <Button
                android:id="@+id/area_select_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/properties_view_item_height"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Select"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/area_coordinates_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Empty"
                app:layout_constraintBottom_toBottomOf="@+id/area_select_button"
                app:layout_constraintEnd_toStartOf="@+id/area_select_button"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/area_select_button"/>

        <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:text="Category"
                app:layout_constraintBottom_toTopOf="@+id/continentSpinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/categorySpinner"/>

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/categorySpinner"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/properties_view_item_height"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/area_select_button" android:focusable="auto"/>

        <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:text="Continent"
                app:layout_constraintBottom_toTopOf="@+id/countrySpinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/continentSpinner"/>

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/continentSpinner"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/properties_view_item_height"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/categorySpinner" app:layout_constraintHorizontal_bias="1.0"/>

        <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Country"
                app:layout_constraintBottom_toBottomOf="@+id/countrySpinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/countrySpinner"/>

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/countrySpinner"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/properties_view_item_height"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/continentSpinner"
                app:layout_constraintHorizontal_bias="1.0"/>

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/propertySpinner"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/properties_view_item_height"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/position_select_button"
                app:layout_constraintHorizontal_bias="1.0"/>

        <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Nearby"
                app:layout_constraintBottom_toBottomOf="@+id/position_select_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/position_select_button"/>

        <Button
                android:id="@+id/position_select_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/properties_view_item_height"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Select"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/countrySpinner"/>

        <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Area"
                app:layout_constraintBottom_toBottomOf="@+id/area_select_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/area_select_button"/>

        <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Property"
                app:layout_constraintBottom_toBottomOf="@+id/propertySpinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/propertySpinner"/>

        <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Order"
                app:layout_constraintBottom_toBottomOf="@+id/orderSpinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/orderSpinner"/>

        <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Limit"
                app:layout_constraintBottom_toBottomOf="@+id/limit_edittext"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/limit_edittext"/>

        <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Fields to show"
                app:layout_constraintBottom_toBottomOf="@+id/request_fields_spinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/request_fields_spinner"/>

        <EditText
                android:id="@+id/limit_edittext"
                android:layout_width="0dp"
                android:layout_height="@dimen/properties_view_item_height"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:inputType="numberDecimal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/orderSpinner"
                app:layout_constraintStart_toEndOf="@+id/textView11" android:layout_marginStart="8dp"/>

        <EditText
                android:id="@+id/esclude_webcam_ids_textmultiline"
                android:layout_width="0dp"
                android:layout_height="@dimen/properties_view_item_height"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:inputType="textMultiLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView12"
                app:layout_constraintTop_toBottomOf="@+id/regionSpinner"/>

        <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Webcam info"
                app:layout_constraintBottom_toBottomOf="@+id/webcam_info_spinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/webcam_info_spinner"/>

        <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Language"
                app:layout_constraintBottom_toBottomOf="@+id/languageSpinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/languageSpinner"/>

        <Button
                android:id="@+id/ok_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="OK"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/languageSpinner"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>