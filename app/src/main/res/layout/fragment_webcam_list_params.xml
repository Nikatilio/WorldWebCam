<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

        <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:text="Continent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/continentSpinner"
                app:layout_constraintBottom_toBottomOf="@+id/continentSpinner"/>
        <Spinner
                android:id="@+id/continentSpinner"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/properties_view_item_height"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Country"
                app:layout_constraintBottom_toBottomOf="@+id/countrySpinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/countrySpinner"/>
        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/countrySpinner"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/properties_view_item_height"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/continentSpinner" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Region"
                app:layout_constraintBottom_toBottomOf="@+id/regionSpinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/regionSpinner"/>
        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/regionSpinner"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/properties_view_item_height"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/countrySpinner"/>

        <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Category"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/categorySpinner"
                app:layout_constraintBottom_toBottomOf="@+id/categorySpinner"/>
        <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/properties_view_item_height"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:focusable="auto" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/regionSpinner"/>
        <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Property"
                app:layout_constraintBottom_toBottomOf="@+id/propertySpinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/propertySpinner"/>
        <Spinner
                android:id="@+id/propertySpinner"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/properties_view_item_height"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/categorySpinner" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Webcam info"
                app:layout_constraintBottom_toBottomOf="@+id/webcamFieldsSpinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/webcamFieldsSpinner"/>
        <Spinner
                android:id="@+id/webcamFieldsSpinner"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/properties_view_item_height"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/propertySpinner"/>
        <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Fields to show"
                app:layout_constraintBottom_toBottomOf="@+id/fieldsToShowSpinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/fieldsToShowSpinner"/>
        <Spinner
                android:id="@+id/fieldsToShowSpinner"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/properties_view_item_height"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/webcamFieldsSpinner"/>
        <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Order"
                app:layout_constraintBottom_toBottomOf="@+id/orderSpinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/orderSpinner"/>
        <Spinner
                android:id="@+id/orderSpinner"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/properties_view_item_height"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fieldsToShowSpinner" android:layout_marginTop="8dp"/>
        <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Limit"
                app:layout_constraintBottom_toBottomOf="@+id/limit_edittext"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/limit_edittext"/>
        <EditText
                android:id="@+id/limit_edittext"
                android:layout_width="0dp"
                android:layout_height="@dimen/properties_view_item_height"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:inputType="numberDecimal"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/orderSpinner"
                android:text="20"/>

        <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Language"
                app:layout_constraintBottom_toBottomOf="@+id/languageSpinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/languageSpinner"/>
        <Spinner
                android:id="@+id/languageSpinner"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/properties_view_item_height"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/limit_edittext"/>

        <Button
                android:id="@+id/ok_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="OK"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/languageSpinner" android:layout_marginTop="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>